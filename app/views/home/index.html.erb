<!-- how it works section  -->
<section id="how-it-works">
	<div class="container holder">
	  <div class="row">
	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box" style="padding: 0px 46px 0px 46px;">
        <h2>We Power On-Demand Storage</h2>
        <p>We pioneered the On-Demand Storage industry with our per-box, per-month service in New York City and San Francisco.  We're expanding globally with our software platform that lets anyone run an On-Demand Storage service quickly and easily.</p>
	    </div>

	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box">
					<div class="panel panel-default">
						<div class="panel-body centered-title" style="padding: 25px 25px 25px 25px;">
							<h3>The Boxbee Directory</h3>
								<p>
									As we build our global network of On-Demand Storage companies that pickup, store and deliver your important stuff whenever and wherever you want, we are showcasing a few of the best.
								</p>
									<p><%= link_to "View Companies", companies_path, class: 'btn-login' %></p>
						</div>
					</div>
      </div>
	  </div>

	  <div class="row">

			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box" style="padding: 0px 46px 0px 46px; text-align:left;">
				<h2>We Are Hiring</h2>
				<% get_job_listings.each do |job| %>
					<%= link_to job[0], job[2], target: '_blank' %>
					<p><%= job[1]%><br/></p>
				<% end %>
			</div>


	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box">
				<div class="panel panel-default">
					<div class="panel-body centered-title" style="padding: 25px 25px 25px 25px;">
						<h3>The Boxbee Beta Program</h3>
						<p>Companies that provide On-Demand Storage services to their customers (or want to) can get early access to our software platform.</p>
						<p><%= link_to "Join The Beta Program", beta_program_path, class: 'btn-login' %></p>
					</div>
				</div>
	    </div>

	  </div>
	</div>
</section>

<div id='existing-users' class='modal fade'>
  <div class='modal-content existing-users-content'>
    <h4>Hi.</h4>
    <p>We are no longer accepting new customers for our On-Demand Storage service.  Current customers can store their boxes with us for as long as they'd like but we won't be taking new boxes into storage.</P>

    <P>Please <A HREF="http://www.boxbee.com/simplestorage">login to your Boxbee account</A> or contact our Customer Service team to schedule an appointment for pickup or delivery.</p>
		<%= link_to image_tag("Boxbee-10.svg"), 'javascript:void(0)', class: 'close-existing-users', "data-dismiss" => "modal" %>
    <!-- <button type="button" class="close-existing-users" data-dismiss="modal"></button> -->
  </div>
</div>
<script src='https://www.workable.com/assets/embed.js' type='text/javascript'></script>
<script type='text/javascript' charset='utf-8'>
	whr(document).ready(function(){
	whr_embed(8394, {detail: 'titles', base: 'jobs', zoom: 'city', grouping: 'none'});
	});
</script>
