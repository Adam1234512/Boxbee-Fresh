<!-- how it works section  -->
<section id="how-it-works">
	<div class="container holder">
	  <div class="row">
	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box" style="padding: 0px 46px 0px 46px;">
        <h2>We Power On-Demand Storage</h2>
        <p>We pioneered the On-Demand Storage industry with our per-box, per-month service in New York City and San Francisco.  We're expanding globally with our software platform that lets anyone easily operate an On-Demand Storage service at scale.</p>
	    </div>

	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box">
					<div class="panel panel-default">
						<div class="panel-body centered-title" style="padding: 25px 25px 25px 25px;">
							<h4>Boxbee Directory</h4>
								<p>
									As we build a global network of companies that offer On-Demand Storage around the world, we're keeping a directory of our favorites.
								</p>
									<p><%= link_to "View Our Directory", companies_path, class: 'btn-login' %></p>
						</div>
					</div>
      </div>
	  </div>

	  <div class="row">

			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box" style="padding: 0px 46px 0px 46px; text-align:left;">
				<p>Join our fast-growing team:</p>

				<% get_job_listings.each do |job| %>
					<%= link_to job[0], job[2], target: '_blank' %>
					<p><%= job[1]%><br/></p>
				<% end %>
			</div>


	    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 box">
				<div class="panel panel-default">
					<div class="panel-body centered-title" style="padding: 25px 25px 25px 25px;">
						<h4>Boxbee Beta</h4>
						<p>Get early access to our software platform that helps anyone provide On-Demand Storage services to their community.</p>
						<p><%= link_to "Join Our Beta", beta_program_path, class: 'btn-login' %></p>
					</div>
				</div>
	    </div>

	  </div>
	</div>
</section>


<script src='https://www.workable.com/assets/embed.js' type='text/javascript'></script>
<script type='text/javascript' charset='utf-8'>
	whr(document).ready(function(){
	whr_embed(8394, {detail: 'titles', base: 'jobs', zoom: 'city', grouping: 'none'});
	});
</script>
