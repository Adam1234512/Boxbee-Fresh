        <div class='container'>
        	<br>
          <div class='row'>
            <div class="col-lg-2 col-md-2  col-xs-4 box">
              <%= image_tag 'googleventures.png', class: 'google' %>
            </div>
            <div class="col-lg-2 col-md-2  col-xs-4 box">
              <%= image_tag 'metamorphic.png' %>
            </div>
            <div class="col-lg-2 col-md-2  col-xs-4 box">
              <%= image_tag 'floodgate.svg', height: '16px', class: 'floodgate' %>
            </div>
            <div class="col-lg-2 col-md-2  col-xs-4 box lucas">
              <%= image_tag 'lucasventures.png', class: 'lucas' %>
            </div>
          </div>
        </div>
</section>
