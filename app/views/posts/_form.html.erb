<%= form_for post do |f|%>
  <% if post.errors.any? %>
   <div class="alert alert-danger">
     <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
     <ul>
       <% post.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
  <% end %>
  <%= form_group_tag(post.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter a post title', required: true %>
  <% end %>
  <%= form_group_tag(post.errors[:content]) do %>
    <%= f.label :content %>
    <%= f.text_area :content, class: "redactor", rows: 40, cols: 120, placeholder: 'Start typing your blog post!', required: true %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
