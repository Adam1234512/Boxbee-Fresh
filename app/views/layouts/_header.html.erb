<header id="header">
  <div class="header-content">
    <% if current_user %>
      <% if current_user.admin? %>
        <%= link_to "Admin Logout", destroy_user_session_path, method: 'delete', class: 'logout' %>
      <% else %>
        <%= link_to "Logout", destroy_user_session_path, method: 'delete', class: 'logout' %>
      <% end %>
    <% end %>
    <strong class="logo">
      <%= link_to image_tag("logo-home.png"), root_path %>
    </strong>
      <%= link_to "Current Customers", current_customers_path, class: "btn-login", "data-toggle" => "modal", "data-target" => "#existing-users" %>
  </div>
</header>
