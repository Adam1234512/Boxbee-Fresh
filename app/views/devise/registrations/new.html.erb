<div class="container holder">
  <div class="centered-form">
    <h2>Please enter your contact details</h2>

    <% if session[:company_id] %>
      <p>Your listing will soon be publicly available and searchable by people looking for storage! To complete the process, please register as a user:</p>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <!-- <small>This will also be your username.</small><br /> -->
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn-login' %>
      </div>
    <% end %>

    <% if !session[:company_id] %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
  </div>
